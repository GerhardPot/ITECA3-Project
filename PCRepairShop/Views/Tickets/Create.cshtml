@model pcrepairshop.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InitialStatus" class="control-label"></label>
                @Html.DropDownListFor(m => m.InitialStatus, (List<SelectListItem>)ViewBag.InitStatus, "Select an option", new { @class = "form-control" })
                <span asp-validation-for="InitialStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InventoryType" class="control-label"></label>
                @Html.DropDownListFor(m => m.InventoryType, (List<SelectListItem>)ViewBag.InvType, "Select an option", new { @class = "form-control" })
                <span asp-validation-for="InventoryType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeviceDescription" class="control-label"></label>
                <input asp-for="DeviceDescription" class="form-control" />
                <span asp-validation-for="DeviceDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
